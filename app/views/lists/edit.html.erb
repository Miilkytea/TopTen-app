<h2>Edit Lists</h2>



<%= form_for [current_user, @list], html: {class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "col-md-4 control-label" %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :image_url, class: "col-md-4 control-label" %>
    <%= f.text_field :image_url %>
  </div>
  <div class="form-group">
    <%= f.label :topic, class: "col-md-4 control-label" %>
    <%= f.text_field :topic %>
  </div>
  <div class="form-group">
  <%= f.label :description, class: "col-md-4 control-label" %>
  <%= f.text_area :description, size: "60x12" %>
  </div>
  <div class="form-group">
    <div class="col-md-5 control-label">
     <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
    </div>
  </div>
<% end %>