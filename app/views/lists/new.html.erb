<h1>New List</h1>

<%= form_for [current_user, @list] do |f| %>
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, value: @list.title %>
  </div>
  
  <div class="field">
    <%= f.label :image_url, "Image URL" %>
    <%= f.text_field :image_url %>
  </div> 

  <div clas="field>"
    <%= f.label :topic, "Topic" %>
    <%= f.text_field :topic %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, size:"60x12", value: @list.description %>
  </div> 
  
  <div class="actions">
    <%= f.submit "Add" %>
  </div>
<% end %>

