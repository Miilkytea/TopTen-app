  <h1>New List</h1>
  <%= form_for [@list] do |f| %>
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, value: @list.title %>
  </div>
  <div class="field">
    <%= f.label :image_url, "Image URL" %>
    <%= f.text_field :image_url %>
  </div> 
  <span class="field" id="drop" >
    <%= f.select :topic, ["Random","Film", "Books", "Movies"], {label: "Pick a Topic"} %>
   </span> 
    <span id="yourTextBox" input type="text"><%= f.text_field :topic %></span>
    
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :list, value: @list.description %>
  </div> 
  <div class="actions">
    <%= f.submit "Add" %>
  </div>
<% end %>

